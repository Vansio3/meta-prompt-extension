{
  "manifest_version": 3,
  "name": "MetaPrompt",
  "version": "1.1",
  "description": "Enhance selected text into a professional prompt using Google AI.",
  "permissions": [
    "contextMenus",     
    "storage",          
    "scripting",        
    "activeTab",        
    "notifications",    
    "clipboardWrite"    
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "MetaPrompt Options" 
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}